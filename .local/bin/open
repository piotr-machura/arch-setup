#!/usr/bin/bash

# XDG-OPEN SCRIPT
# ---------------
# Wrap mimeopen to correctly open many files
# in a separate processes and supress output

for arg in "$@"; do
    if  [ -d "$arg" ] || [ -f "$arg" ]; then
        mimeopen --no-ask "$arg" &> /dev/null &
        disown
    else
        echo "Not a file or directory: $arg"
    fi
done
