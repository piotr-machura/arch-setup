# Dump all explicitly installed packages to
# $HOME/.local/share/pacman/PKGLIST
# Note: sudo has to preserve $HOME

[Trigger]
Type = Package 
Operation = Install
Operation = Remove
Target = *

[Action]
Description = Updating package database... 
When = PostTransaction
Exec = /bin/sh -c '/usr/bin/pacman -Qqe > $HOME/.local/share/pacman/PKGLIST'
