[Trigger]
Type = Package 
Operation = Install
Operation = Remove
Target = *

[Action]
Description = Updating local .desktop entries... 
When = PostTransaction
Exec = /bin/sh -c '/usr/bin/cp -rn /usr/share/applications $HOME/.local/applications; /usr/bin/chown -R $(cut -d'/' -f3 <<<$HOME) $HOME/.local/share/applications'
